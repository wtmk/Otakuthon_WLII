        <TextBlock x:Name="Player_1" FontSize="30" HorizontalAlignment="Left" Margin="200,935,0,0" TextWrapping="Wrap" Text="Player 1" VerticalAlignment="Top" Height="52" Width="136"/>
        <TextBlock x:Name="Player_2" FontSize="30" HorizontalAlignment="Left" Margin="642,934,0,0" TextWrapping="Wrap" Text="Player 2" VerticalAlignment="Top" Height="52" Width="136"/>
        <TextBlock x:Name="Player_3" FontSize="30" HorizontalAlignment="Left" Margin="1088,935,0,0" TextWrapping="Wrap" Text="Player 3" VerticalAlignment="Top" Height="52" Width="136"/>
