        <TextBlock x:Name="player_3_score" FontSize="30" HorizontalAlignment="Left" Margin="1114,974,0,0" TextWrapping="Wrap" Text="{Binding p3_score_label}" VerticalAlignment="Top" RenderTransformOrigin="-7.735,-0.688"/>
        <TextBlock x:Name="player_4_score" FontSize="30" HorizontalAlignment="Left" Margin="1499,974,0,0" TextWrapping="Wrap" Text="{Binding p4_score_label}" VerticalAlignment="Top" RenderTransformOrigin="-7.735,-0.688"/>
