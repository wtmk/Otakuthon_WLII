        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="630,931,0,0" Stroke="Black" VerticalAlignment="Top" Width="127"/>

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="187,928,0,0" Stroke="Black" VerticalAlignment="Top" Width="125"/>

