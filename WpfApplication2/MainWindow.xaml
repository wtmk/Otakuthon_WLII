        <TextBlock x:Name="player_2_score_Copy" FontSize="20" HorizontalAlignment="Left" Margin="2454,926,0,0" TextWrapping="Wrap" Text="{Binding p2_score_label}" VerticalAlignment="Top" RenderTransformOrigin="-7.735,-0.688"/>
        <TextBlock x:Name="player_3_score_Copy" FontSize="20" HorizontalAlignment="Left" Margin="2621,928,0,0" TextWrapping="Wrap" Text="{Binding p3_score_label}" VerticalAlignment="Top" RenderTransformOrigin="-7.735,-0.688"/>
        <TextBlock x:Name="player_4_score_Copy" FontSize="20" HorizontalAlignment="Left" Margin="2812,930,0,0" TextWrapping="Wrap" Text="{Binding p4_score_label}" VerticalAlignment="Top" RenderTransformOrigin="-7.735,-0.688"/>

    </Grid>
</Window>